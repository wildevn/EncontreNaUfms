{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"include": ["src/*.ts", "src/**/.ts", "src/**/**/.ts"]
	},
	"formatter": {
		"formatWithErrors": true,
		"indentStyle": "space",
		"indentWidth": 2
	}
}
